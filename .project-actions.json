{
    "actions": [
        {
            "text": "$(zap) Format",
            "command": "uv run -m black src",
            "color": "#f1c40f"
        },
        {
            "text": "$(check) Lint",
            "command": "uv run -m pylint src; uv run yina lint src",
            "color": "#007acc"
        },
        {
            "text": "$(arrow-up) Push",
            "command": "git add . && git commit && git push",
            "color": "#28a745"
        },
        {
            "text": "$(arrow-down) Pull",
            "command": "git pull",
            "color": "#17a2b8"
        },
        {
            "text": "$(gear) Bump",
            "command": "uv version --bump patch",
            "color": "#6f42c1"
        },
        {
            "text": "$(pencil) Clean",
            "command": "rm -rf build dist",
            "color": "#dbab09"
        },
        {
            "text": "$(package) Build",
            "command": "uv build",
            "color": "#4e9a06"
        },
        {
            "text": "$(rocket) Publish",
            "command": "uv publish",
            "color": "#d73a49"
        }
    ]
}
{
    "actions": [
        {
            "text": "$(zap) Format",
            "command": "uv run -m black src",
            "color": "#d2c45e"
        },
        {
            "text": "$(check) Lint",
            "command": "uv run -m pylint src; uv run yina lint src",
            "color": "#67c3aa"
        },
        {
            "text": "$(arrow-up) Push",
            "command": "git add . && git commit && git push",
            "color": "#6aa548"
        },
        {
            "text": "$(arrow-down) Pull",
            "command": "git pull",
            "color": "#5d86b5"
        },
        {
            "text": "$(debug-step-over) Bump",
            "command": "uv version --bump patch",
            "color": "#a763b8"
        },
        {
            "text": "$(rocket) Publish",
            "command": "uv build; uv publish",
            "color": "#e6646b"
        }
    ]
}